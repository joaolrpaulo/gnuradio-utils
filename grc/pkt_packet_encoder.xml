<?xml version="1.0"?>
<block>
    <name>Packet Encoder</name>
    <key>pkt_packet_encoder</key>
    <category>[Indoor Location]</category>
    <import>import pkt</import>
    <make>pkt.packet_mod_$(type.fcn)(pkt.packet_encoder(station_id=$station_id), payload_length=$payload_length)</make>
    <param>
        <name>Input Type</name>
        <key>type</key>
        <value>float</value>
        <type>enum</type>
        <option>
            <name>Complex</name>
            <key>complex</key>
            <opt>fcn:c</opt>
        </option>
        <option>
            <name>Float</name>
            <key>float</key>
            <opt>fcn:f</opt>
        </option>
        <option>
            <name>Int</name>
            <key>int</key>
            <opt>fcn:i</opt>
        </option>
        <option>
            <name>Short</name>
            <key>short</key>
            <opt>fcn:s</opt>
        </option>
        <option>
            <name>Byte</name>
            <key>byte</key>
            <opt>fcn:b</opt>
        </option>
    </param>
    <param>
        <name>Station ID</name>
        <key>station_id</key>
        <type>string</type>
    </param>
    <param>
        <name>Payload Length</name>
        <key>payload_length</key>
        <value>4</value>
        <type>int</type>
    </param>
    <sink>
        <name>in</name>
        <type>$type</type>
    </sink>
    <source>
        <name>out</name>
        <type>byte</type>
    </source>
    <doc>
        Packet encoder block, for use with the gnuradio modulator blocks: gmsk, dpsk, qam.

        Payload Length: 0 for automatic.
    </doc>
</block>